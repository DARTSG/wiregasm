[binaries]
c = 'emcc'
cpp = 'em++'
ar = 'emar'
strip = 'wasm32-unknown-emscripten-strip'
pkgconfig = 'pkg-config'
windres = 'wasm32-unknown-emscripten-windres'

[properties]
needs_exe_wrapper = true

[host_machine]
system = 'emscripten'
cpu_family = 'wasm32'
endian = 'little'
cpu = 'wasm32'

[cmake]
CMAKE_C_COMPILER = 'emcc'
CMAKE_CXX_COMPILER = 'em++'
